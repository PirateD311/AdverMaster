<% include admin-header.ejs %>

<div class="am-cf admin-main">
  <!-- sidebar start -->
<% include admin-sidebar.ejs %>
  <!-- sidebar end -->

  <!-- content start -->
  <div class="admin-content">
    <div class="admin-content-body">
      <div class="am-cf am-padding am-padding-bottom-0">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">个人资料</strong> / <small>Personal information</small></div>
      </div>

      <hr/>


        <div class="am-panel am-panel-default">
          <div class="am-panel-bd">
            <div class="user-info">
              <p>余额信息</p>
              <div class="am-progress am-progress-sm">
                <div class="am-progress-bar" style="width: 10%"></div>
              </div>
              <p class="user-info-order">当前余额：<strong><%= data.user.nBalance %></strong></p>
            </div>
            <div class="user-info">
              <p>通用信息</p>
              <div>电话:<strong><%= data.user.sUserPhone %></strong></div>
              <div>QQ:<strong><%= data.user.sUserQQ %></strong></div>
            </div>
          </div>
        </div>





  </div>
  <!-- content end -->

</div>

<a href="#" class="am-icon-btn am-icon-th-list am-show-sm-only admin-menu" data-am-offcanvas="{target: '#admin-offcanvas'}"></a>

<% include admin-footer.ejs %>
</body>
</html>
