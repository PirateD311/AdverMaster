<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Amaze UI Admin form Examples</title>
  <meta name="description" content="这是一个form页面">
  <meta name="keywords" content="form">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="renderer" content="webkit">
  <meta http-equiv="Cache-Control" content="no-siteapp" />
  <link rel="icon" type="image/png" href="/lib/amazeUI_admin/i/favicon.png">
  <link rel="apple-touch-icon-precomposed" href="/lib/amazeUI_admin/i/app-icon72x72@2x.png">
  <meta name="apple-mobile-web-app-title" content="Amaze UI" />
  <link rel="stylesheet" href="/lib/amazeUI_admin/css/amazeui.min.css"/>
  <link rel="stylesheet" href="/lib/amazeUI_admin/css/admin.css">
</head>
<body>

<!--header start-->
<% include admin-header.ejs %>
<!--header end-->

<div class="am-cf admin-main">
  <!-- sidebar start -->
  <% include admin-sidebar.ejs %>
  <!-- sidebar end -->

<!-- content start -->
<div class="admin-content">
  <div class="admin-content-body">
    <div class="am-cf am-padding am-padding-bottom-0">
      <div class="am-fl am-cf">
        <strong class="am-text-primary am-text-lg">账单管理</strong> /
        <small>创建账单</small>
      </div>
    </div>

    <hr>
    <form action="/admin/bill/create" method="post" >
    <div class="am-tabs am-margin" data-am-tabs>
      <ul class="am-tabs-nav am-nav am-nav-tabs">
        <li class="am-active"><a href="#tab1">账单详情</a></li>
      </ul>

      <div class="am-tabs-bd">
        <div class="am-tab-panel am-fade am-in am-active" id="tab1">
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                日期
              </div>
              <div class="am-u-sm-8 am-u-md-10">
                <div class="am-form-group am-form-icon">
                  <i class="am-icon-calendar"></i>
                  <input name="sDate" type="date" class="am-form-field am-input-sm" placeholder="日期">
                </div>
              </div>
            </div>

            <!-- 收款人-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">收款人</div>
              <div class="am-u-sm-8 am-u-md-10">
                <input name="sTo" type="text" class="am-input-sm">
              </div>
            </div>
            <!-- 项目名称-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                打款人
              </div>
              <div class="am-u-sm-8 am-u-md-4 am-u-end col-end">
                <input name="sFrom" type="text" class="am-input-sm">
              </div>
            </div>
            <!-- 账单类型-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                账单类型
              </div>
              <div class="am-u-sm-8 am-u-md-4 am-u-end col-end">
                <div class="am-btn-group" data-am-button>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input checked="checked" type="radio" value="广告主充值" name="sClass" id="option1"> 广告主充值
                  </label>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input type="radio" value="站长结算" name="sClass" id="option1"> 站长结算
                  </label>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input type="radio" value="其他" name="sClass" id="option1"> 其他
                  </label>
                </div>
              </div>
            </div>


            <!-- 金额-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">金额</div>
              <div class="am-u-sm-8 am-u-md-10">
                <div class="am-btn-group" data-am-button>
                  <input name="nMoney" type="number" class="am-input-sm">
                </div>
              </div>
            </div>
            <!-- 支付方式-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">支付方式</div>
              <div class="am-u-sm-8 am-u-md-10">
                <div class="am-btn-group" data-am-button>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input checked="checked" type="radio" value="支付宝" name="sPayWay" id="option3"> 支付宝
                  </label>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input type="radio" value="微信" name="sPayWay" id="option3"> 微信
                  </label>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input type="radio" value="银行转账" name="sPayWay" id="option3"> 银行转账
                  </label>
                </div>
              </div>
            </div>
            <!-- 账单状态-->
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">支付方式</div>
              <div class="am-u-sm-8 am-u-md-10">
                <div class="am-btn-group" data-am-button>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input checked="checked" type="radio" value="已结清" name="sState" id="option2"> 已结清
                  </label>
                  <label class="am-btn am-btn-default am-btn-xs">
                    <input type="radio" value="待支付" name="sState" id="option2"> 待支付
                  </label>
                </div>
              </div>
            </div>


        </div>
<!--费用与展示策略-->



      </div>
    </div>

    <div class="am-margin">
      <button type="submit" class="am-btn am-btn-primary am-btn-xs">提交保存</button>
      <!--<button type="button" class="am-btn am-btn-primary am-btn-xs">放弃保存</button>-->
    </div>
    </form>
  </div>

  <footer class="admin-content-footer">
    <hr>
    <p class="am-padding-left">© 2014 AllMobilize, Inc. Licensed under MIT license.</p>
  </footer>
</div>
<!-- content end -->

</div>


<!--footer and base js begin-->
<% include admin-footer.ejs %>
<!--footer and base js end-->
</body>
</html>
